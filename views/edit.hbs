<div class="container">
  <div class="row flex-column align-items-center no-gutters">
    <form class="col-6" action="">
      <!-- 標題 -->
      <div class="row no-gutters align-items-center">
        <h6 class="col-3 text-danger mb-5 ">* 必填欄位</h6>
        <h4 class="col-9 text-center mb-5 p-3 font-weight-bold bg-light">請輸入你的支出</h4>
      </div>
      <!-- 項目名稱 -->
      <div class="form-group row no-gutters align-items-center">
        <label for="title" class="col-3 col-form-label ">名稱 <span class="text-danger font-weight-bold">*</span>：</label>
        <div class="col-9">
          <input type="title" class="form-control" id="title" name="title">
        </div>
      </div>
      <!-- 日期 -->
      <div class="form-group row no-gutters align-items-center">
        <label for="time" class="col-3 col-form-label ">日期 <span class="text-danger font-weight-bold">*</span>：</label>
        <div class="col-9">
          <input type="date" class="form-control" id="time" name="time">
        </div>
      </div>

      <!-- 類別 -->
      <div class="form-group row no-gutters align-items-center">
        <label class="col-3" for="category">類別 <span class="text-danger font-weight-bold">*</span>：</label>
        <select name="category" id="category" class="col-9 form-control">
          <option selected disabled>請選擇</option>
          <option value="">家居物業</option>
          <option value="">交通出行</option>
          <option value="">休閒娛樂</option>
          <option value="">餐飲食品</option>
          <option value="">其他</option>

        </select>
      </div>
      <!-- 金額 -->
      <div class="form-group row no-gutters align-items-center">
        <label for="price" class="col-3 col-form-label ">金額 <span class="text-danger font-weight-bold">*</span>：</label>
        <div class="col-9">
          <input type="number" class="form-control" id="price" name="price">
        </div>
      </div>
      <!-- 送出 -->
      <div class="row no-gutters justify-content-center">
        <button type="submit" href="" class="col-6 btn btn-dark mt-3 p-3">修改</button>
      </div>

    </form>
  </div>
</div>