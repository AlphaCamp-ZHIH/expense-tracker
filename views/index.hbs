<div class="container">
  <div class="row flex-column align-items-center no-gutters">
    <!-- 下拉 -->
    <div class="col-6 dropdown">
      <button class="btn btn-outline-dark dropdown-toggle w-100 pt-3 pb-3 mb-5 " type="button" id="dropdownMenuButton"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        類別
      </button>
      <div class="dropdown-menu w-100 " aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item w-100" href="#">家居物業</a>
        <a class="dropdown-item w-100" href="#">交通出行</a>
        <a class="dropdown-item w-100" href="#">休閒娛樂</a>
        <a class="dropdown-item w-100" href="#">餐飲食品</a>
        <a class="dropdown-item w-100" href="#">其他</a>

      </div>
    </div>
    <!-- 金額 -->
    <div class="row col-6 mb-5">
      <h4 class="col-4">總金額:</h4>
      <h2 class="col-8 text-right text-success">{{totalAmount}}</h2>
    </div>
    <!-- 支出 -->
    {{#each expenses}}
    <div class="row col-9 bg-light align-items-center justify-content-between mb-3">
      <div class="col-1">
        <i class="fas {{this.categoryIcon}} fa-3x text-danger"></i>
      </div>
      <div class="col-6 d-flex flex-column justify-content-center">

        <h4 class="pt-3 font-weight-bold">{{this.name}}</h4>
        <p class="pt-1 text-info">{{this.date}}<span class="text-info">-{{this.merchant}}</span></p>


      </div>
      <div class="col-1  h-100">
        <h5>{{this.amount}}</h5>
      </div>
      <div class="col-3 d-flex text-center">
        <a class="btn btn-info" href="">修改</a>
        <form action="/records/{{this._id}}?_method=Delete" method="POST">
          <button type="submit" class="btn btn-warning">刪除</button>
        </form>
      </div>
    </div>
    {{/each}}
    <!-- 新增 -->
    <a href="/records/new" class="col-3 btn btn-dark mt-3 p-3">新增支出</a>
  </div>








</div>